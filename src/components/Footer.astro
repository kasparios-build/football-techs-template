---
// src/components/Footer.astro
const today = new Date();
---
<footer>
	<div class="footer-content">
		<p>&copy; {today.getFullYear()} Football Techs. All rights reserved.</p>
		
		<div class="social-links">
			<a href="https://x.com/FootballTechs" target="_blank" rel="noopener" aria-label="Follow Football Techs on X">
				<span class="sr-only">Follow @FootballTechs on X</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
					<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
				</svg>
			</a>
		</div>
	</div>
</footer>

<style>
	footer {
		padding: 3em 1em 4em;
		background: linear-gradient(var(--gray-gradient)) no-repeat;
		color: rgb(var(--gray));
		text-align: center;
		font-size: 0.95rem;
	}

	.footer-content p {
		margin: 0 0 1.5em 0;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-top: 0;
	}

	.social-links a {
		display: flex;
		color: rgb(var(--gray));
		text-decoration: none;
		transition: color 0.2s ease, opacity 0.2s ease;
	}

	.social-links a:hover {
		color: rgb(var(--gray-dark));
		opacity: 0.9;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}
</style>
