---
// src/components/Header.astro
---
<header>
	<nav>
		<h2>
			<a href="/">Football Techs</a>
		</h2>

		<div class="internal-links">
			<a href="/" class="nav-link">Home</a>
			<a href="/news" class="nav-link">News</a>
			<a href="/about" class="nav-link">About</a>
		</div>

		<div class="social-links">
			<a href="https://x.com/FootballTechs" target="_blank" rel="noopener" aria-label="Follow Football Techs on X">
				<span class="sr-only">Follow @FootballTechs on X</span>
				<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
					<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
				</svg>
			</a>
		</div>
	</nav>
</header>

<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: rgba(0, 0, 0, 0.5);
		backdrop-filter: blur(8px);
		box-shadow: none;
	}

	h2 {
		margin: 0;
		font-size: 1.75rem;
		font-weight: 800;
	}

	h2 a {
		text-decoration: none;
		color: #ffffff;
	}

	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		padding: 1rem 0;
	}

	.internal-links {
		display: flex;
		gap: 2.5rem;
	}

	.nav-link {
		padding: 0.5rem 0;
		color: #ffffff;
		font-weight: 500;
		font-size: 1.1rem;
		text-decoration: none;
		border-bottom: 4px solid transparent;
		transition: opacity 0.2s ease;
	}

	.nav-link:hover,
	.nav-link.active {
		opacity: 0.8;
		border-bottom-color: #00ff9d;
	}

	.social-links a {
		color: #ffffff;
		transition: opacity 0.2s ease;
	}

	.social-links a:hover {
		opacity: 0.8;
	}

	.sr-only {
		position: absolute;
		width: 1px;
		height: 1px;
		padding: 0;
		margin: -1px;
		overflow: hidden;
		clip: rect(0, 0, 0, 0);
		white-space: nowrap;
		border-width: 0;
	}

	@media (max-width: 720px) {
		h2 { font-size: 1.5rem; }
		.internal-links { gap: 1.5rem; }
		.nav-link { font-size: 1rem; }
	}
</style>
