---
// src/pages/index.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../assets/SiteBanner.png';

const SITE_TITLE = 'Football Techs';
const SITE_DESCRIPTION = 'NFL and College Football news, analysis, betting – AI-powered picks and data-driven insights';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="hero-banner">
			<Image src={SiteBanner} alt="Football Techs Banner" width={1920} height={600} format="webp" loading="eager" />
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="main-content">
			<section class="intro">
				<h1>Football Techs</h1>
				<p class="tagline">We provide NFL and College Football news, analysis, betting</p>
				<p class="description">
					Data-driven insights • AI-powered picks • Player props • Game previews • Sharp betting edges<br />
					Home of <a href="https://x.com/FootballTechs" target="_blank" rel="noopener">@FootballTechs</a> on X
				</p>
			</section>

			<section class="latest">
				<h2>Latest Picks & Analysis</h2>
				<p class="intro-text">Fresh AI-powered NFL picks and breakdowns every week.</p>
				<p class="cta">
					<a href="/news" class="cta-button">View All News & Picks →</a>
				</p>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner { position: relative; width: 100%; overflow: hidden; }
	.hero-banner :global(img) { width: 100%; height: auto; display: block; }
	.nav-overlay { position: absolute; top: 0; left: 0; width: 100%; z-index: 10; }

	.main-content { max-width: 1200px; margin: 0 auto; padding: 3rem 1.5rem; text-align: center; }

	.intro { margin-bottom: 5rem; }
	.tagline { font-size: 1.5rem; font-weight: 700; margin: 1.5rem 0; }
	.description { font-size: 1.1rem; max-width: 700px; margin: 0 auto; color: var(--text-secondary); }

	.latest { margin-top: 3rem; }
	.intro-text { font-size: 1.2rem; max-width: 700px; margin: 0 auto 2rem; color: var(--text-secondary); }
	.cta-button { display: inline-block; padding: 0.8rem 1.8rem; background: #00ff9d; color: black; font-weight: 600; text-decoration: none; border-radius: 0.5rem; }
	.cta-button:hover { opacity: 0.9; }
</style>
