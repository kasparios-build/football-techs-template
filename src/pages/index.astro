---
// src/pages/index.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../assets/SiteBanner.png';

const SITE_TITLE = 'Football Techs';
const SITE_DESCRIPTION = 'NFL and College Football news, analysis, betting – AI-powered picks and data-driven insights';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<!-- Full-width Hero Banner ABOVE Navigation -->
		<div class="hero-banner">
			<Image
				src={SiteBanner}
				alt="Football Techs - NFL & College Football News, Analysis, Betting"
				width={1920}
				height={600}
				format="webp"
				loading="eager"
			/>
			<!-- Navigation Overlay on Top of Banner -->
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="main-content">
			<!-- Intro Section -->
			<section class="intro">
				<h1>Football Techs</h1>
				<p class="tagline">
					We provide NFL and College Football news, analysis, betting
				</p>
				<p class="description">
					Data-driven insights • AI-powered picks • Player props • Game previews • Sharp betting edges<br />
					Home of <a href="https://x.com/FootballTechs" target="_blank" rel="noopener">@FootballTechs</a> on X
				</p>
			</section>

			<!-- Latest Picks Placeholder -->
			<section class="latest">
  <h2>Latest Picks & Analysis</h2>
  <p class="intro-text">
    Fresh AI-powered NFL picks, player props, and data-driven breakdowns every week.
  </p>
  <p class="cta">
    <a href="/news" class="cta-button">View All News & Picks →</a>
  </p>
</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	/* Hero Banner - Full Width, Above Everything */
	.hero-banner {
		position: relative;
		width: 100%;
		overflow: hidden;
	}

	.hero-banner :global(img) {
		width: 100%;
		height: auto;
		display: block;
	}

	/* Navigation Overlay - Places Header on Top of Banner */
	.nav-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 10; /* Ensures nav is above banner image */
		background: rgba(0, 0, 0, 0.3); /* Optional: subtle dark overlay for readability */
		backdrop-filter: blur(2px); /* Optional: slight blur behind nav */
	}

	/* Main Content - Starts Below the Banner */
	.main-content {
		max-width: 1200px;
		margin: 0 auto;
		padding: 2rem 1.5rem;
		position: relative;
		background: var(--theme-bg, #ffffff); /* Matches your theme */
	}

	.intro {
		text-align: center;
		margin-bottom: 5rem;
	}

	.tagline {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--theme-accent, #00ff9d);
		margin: 1.5rem 0 1rem;
		line-height: 1.4;
	}

	.description {
		font-size: 1.1rem;
		color: var(--text-secondary);
		max-width: 700px;
		margin: 0 auto;
	}

	.latest {
		text-align: center;
	}

	.placeholder {
		font-size: 1.2rem;
		color: var(--text-secondary);
		font-style: italic;
	}
</style>
