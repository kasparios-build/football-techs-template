---
// src/pages/index.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../assets/SiteBanner.png';

const SITE_TITLE = 'Football Techs';
const SITE_DESCRIPTION = 'NFL and College Football news, analysis, betting – AI-powered picks and data-driven insights';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />

		<main>
			<!-- Hero Banner -->
			<div class="banner-wrapper">
				<Image
					src={SiteBanner}
					alt="Football Techs - NFL & College Football News, Analysis, Betting"
					width={1920}
					height={600}
					format="webp"
					loading="eager"
				/>
			</div>

			<!-- Intro Section -->
			<section class="intro">
				<h1>Football Techs</h1>
				<p class="tagline">
					We provide NFL and College Football news, analysis, betting
				</p>
				<p class="description">
					Data-driven insights • AI-powered picks • Player props • Game previews • Sharp betting edges<br />
					Home of <a href="https://x.com/FootballTechs" target="_blank" rel="noopener">@FootballTechs</a> on X
				</p>
			</section>

			<!-- Placeholder for future blog posts / picks -->
			<section class="latest">
				<h2>Latest Picks & Analysis</h2>
				<p class="placeholder">
					Wild Card weekend AI breakdowns dropping soon — stay tuned!
				</p>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.banner-wrapper {
		width: 100%;
		margin-bottom: 3rem;
		overflow: hidden;
	}

	.banner-wrapper :global(img) {
		width: 100%;
		height: auto;
		display: block;
	}

	.intro {
		text-align: center;
		max-width: 900px;
		margin: 0 auto 5rem auto;
		padding: 0 1.5rem;
	}

	.tagline {
		font-size: 1.5rem;
		font-weight: 700;
		color: var(--theme-accent, #00ff9d);
		margin: 1.5rem 0 1rem;
		line-height: 1.4;
	}

	.description {
		font-size: 1.1rem;
		color: var(--text-secondary);
		max-width: 700px;
		margin: 0 auto;
	}

	.latest {
		text-align: center;
		max-width: 900px;
		margin: 0 auto;
		padding: 0 1.5rem;
	}

	.placeholder {
		font-size: 1.2rem;
		color: var(--text-secondary);
		font-style: italic;
	}
</style>
