---
// src/pages/blog/index.astro
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../../assets/SiteBanner.png';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const SITE_TITLE = 'News - Football Techs';
const SITE_DESCRIPTION = 'Latest NFL and College Football news, analysis, and AI-powered betting picks from Football Techs';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<!-- Hero Banner with Nav Overlay -->
		<div class="hero-banner">
			<Image src={SiteBanner} alt="Football Techs News" width={1920} height={600} format="webp" loading="eager" />
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="news-content">
			<section class="news-list">
				<h1>Latest News & Analysis</h1>
				<p class="intro">Fresh NFL and College Football insights, AI picks, and betting edges.</p>

				{posts.length === 0 ? (
					<p>No articles yet â€” Wild Card coverage dropping soon!</p>
				) : (
					<ul class="post-grid">
						{sortedPosts.map((post) => (
							<li class="post-card">
								<a href={`/blog/${post.slug}/`}>
									<h2>{post.data.title}</h2>
									<p class="date">{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</p>
									<p>{post.data.description}</p>
								</a>
							</li>
						))}
					</ul>
				)}
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner, .nav-overlay { /* Reuse from homepage */ 
		position: relative; width: 100%; overflow: hidden; 
	}
	.hero-banner :global(img) { width: 100%; height: auto; display: block; }
	.nav-overlay { position: absolute; top: 0; left: 0; width: 100%; z-index: 10; }

	.news-content {
		max-width: 1100px;
		margin: 0 auto;
		padding: 3rem 1.5rem;
	}

	h1 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 1rem;
	}

	.intro {
		text-align: center;
		font-size: 1.2rem;
		margin-bottom: 3rem;
		color: var(--text-secondary);
	}

	.post-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		list-style: none;
		padding: 0;
	}

	.post-card {
		background: var(--card-bg, #f9f9f9);
		border-radius: 0.75rem;
		padding: 1.5rem;
		transition: transform 0.2s ease;
	}

	.post-card:hover {
		transform: translateY(-4px);
	}

	.post-card a {
		text-decoration: none;
		color: inherit;
		display: block;
	}

	.post-card h2 {
		margin: 0 0 0.5rem;
		font-size: 1.4rem;
	}

	.date {
		font-size: 0.9rem;
		color: var(--text-secondary);
		margin-bottom: 0.75rem;
	}

	.post-card p {
		margin: 0;
		line-height: 1.6;
	}
</style>
