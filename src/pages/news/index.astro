---
// src/pages/news/index.astro
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../../assets/SiteBanner.png';
import { getCollection } from 'astro:content';

const posts = await getCollection('news');
const sortedPosts = posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const SITE_TITLE = 'News - Football Techs';
const SITE_DESCRIPTION = 'Latest NFL and College Football news, analysis, and AI-powered betting picks';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<div class="hero-banner">
			<Image src={SiteBanner} alt="Football Techs News" width={1920} height={600} format="webp" loading="eager" />
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="page-content">
			<section class="news-section">
				<h1>News & Analysis</h1>
				<p class="intro">Latest NFL and College Football insights, AI picks, and betting edges from Football Techs.</p>

				{posts.length === 0 ? (
					<p class="no-posts">No articles yet â€” check back soon!</p>
				) : (
					<ul class="post-list">
						{sortedPosts.map((post) => (
							<li class="post-item">
								<a href={`/news/${post.slug ?? post.id}/`}>
									<h2>{post.data.title}</h2>
									<time>{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
									<p>{post.data.description || ''}</p>
								</a>
							</li>
						))}
					</ul>
				)}
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner { position: relative; width: 100%; overflow: hidden; }
	.hero-banner :global(img) { width: 100%; height: auto; display: block; }
	.nav-overlay { position: absolute; top: 0; left: 0; width: 100%; z-index: 10; }

	.page-content { max-width: 1100px; margin: 0 auto; padding: 3rem 1.5rem; text-align: center; }

	h1 { font-size: 2.5rem; margin-bottom: 1rem; }
	.intro { font-size: 1.2rem; margin-bottom: 3rem; color: var(--text-secondary); }
	.no-posts { font-size: 1.2rem; font-style: italic; color: var(--text-secondary); }

	.post-list { list-style: none; padding: 0; max-width: 800px; margin: 0 auto; text-align: left; }
	.post-item { margin-bottom: 3rem; padding-bottom: 2rem; border-bottom: 1px solid var(--gray-light); }
	.post-item a { text-decoration: none; color: inherit; }
	.post-item h2 { margin: 0 0 0.5rem; font-size: 1.8rem; }
	.post-item time { display: block; margin-bottom: 0.75rem; color: var(--text-secondary); }
	.post-item p { margin: 0; line-height: 1.6; color: var(--text-secondary); }
</style>
