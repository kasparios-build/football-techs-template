---
// src/pages/news/[...slug].astro
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../../assets/SiteBanner.png';
import { getCollection, getEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('news');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();

const SITE_TITLE = `${post.data.title} - Football Techs`;
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={post.data.description || ''} />
	</head>
	<body>
		<div class="hero-banner">
			<Image src={SiteBanner} alt="Football Techs Post" width={1920} height={600} format="webp" loading="eager" />
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="post-content">
			<article class="post-article">
				<h1>{post.data.title}</h1>
				<time>{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</time>
				{post.data.description && <p class="description">{post.data.description}</p>}
				<Content />
				<a href="/news" class="back-link">‚Üê Back to News</a>
			</article>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner { position: relative; width: 100%; overflow: hidden; }
	.hero-banner :global(img) { width: 100%; height: auto; display: block; }
	.nav-overlay { position: absolute; top: 0; left: 0; width: 100%; z-index: 10; }

	.post-content { max-width: 800px; margin: 0 auto; padding: 3rem 1.5rem; text-align: center; }
	.post-article { text-align: left; }
	h1 { font-size: 2.5rem; margin-bottom: 1rem; }
	time { display: block; margin-bottom: 1.5rem; color: var(--text-secondary); }
	.description { font-size: 1.2rem; color: var(--text-secondary); margin-bottom: 2rem; }
	.back-link { display: inline-block; margin-top: 3rem; font-weight: 600; color: var(--theme-accent); }
</style>
