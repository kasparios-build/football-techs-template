---
// src/pages/about.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../assets/SiteBanner.png';

const SITE_TITLE = 'About - Football Techs';
const SITE_DESCRIPTION = 'Learn more about Football Techs – NFL and College Football news, analysis, and AI-powered betting insights from @FootballTechs';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<!-- Hero Banner with Nav Overlay (consistent across site) -->
		<div class="hero-banner">
			<Image
				src={SiteBanner}
				alt="Football Techs - About"
				width={1920}
				height={600}
				format="webp"
				loading="eager"
			/>
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="about-content">
			<section class="about-section">
				<h1>About Football Techs</h1>
				
				<p class="intro">
					Welcome to <strong>Football Techs</strong> – your trusted source for data-driven NFL and College Football coverage.
				</p>

				<p>
					We deliver sharp news, in-depth analysis, AI-powered betting picks, player props, and game previews you won’t find anywhere else. Everything is backed by analytics, modeling, and transparent performance tracking.
				</p>

				<p>
					This site is the official home of <a href="https://x.com/FootballTechs" target="_blank" rel="noopener">@FootballTechs</a> on X (2.4k+ followers and growing fast). All the picks, breakdowns, and insights you see on X now live here in full detail.
				</p>

				<h2>What We Offer</h2>
				<ul class="features">
					<li>AI-generated picks & player props with confidence levels</li>
					<li>Detailed game previews and statistical deep dives</li>
					<li>Breaking NFL & College Football news with a tech/analytics angle</li>
					<li>Full playoff coverage – Wild Card through Super Bowl</li>
					<li>Transparent ROI tracking and long-term performance stats</li>
				</ul>

				<h2>Our Mission</h2>
				<p>
					To arm football fans and bettors with the sharpest, most actionable insights available – turning raw data into real edges, one pick at a time.
				</p>

				<p class="closing">
					Thanks for stopping by. Follow us on X for daily updates and join the conversation!<br />
					<a href="https://x.com/FootballTechs" target="_blank" rel="noopener" class="x-link">@FootballTechs</a>
				</p>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner {
		position: relative;
		width: 100%;
		overflow: hidden;
	}

	.hero-banner :global(img) {
		width: 100%;
		height: auto;
		display: block;
	}

	.nav-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 10;
	}

	.about-content {
		max-width: 900px;
		margin: 0 auto;
		padding: 4rem 1.5rem;
	}

	.about-section {
		line-height: 1.8;
		font-size: 1.1rem;
	}

	h1 {
		text-align: center;
		font-size: 2.8rem;
		margin-bottom: 2rem;
	}

	.intro {
		font-size: 1.35rem;
		text-align: center;
		margin: 0 auto 2.5rem;
		max-width: 800px;
		font-weight: 500;
	}

	.features {
		font-size: 1.15rem;
		margin: 3rem 0;
		padding-left: 2rem;
		max-width: 700px;
		margin-left: auto;
		margin-right: auto;
	}

	.features li {
		margin-bottom: 1rem;
	}

	h2 {
		text-align: center;
		font-size: 2rem;
		margin: 3.5rem 0 1.5rem;
	}

	.closing {
		text-align: center;
		font-size: 1.2rem;
		margin-top: 4rem;
	}

	.x-link {
		font-weight: 700;
		color: var(--theme-accent, #00ff9d);
		text-decoration: none;
	}

	.x-link:hover {
		text-decoration: underline;
	}
</style>
