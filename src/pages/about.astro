---
// src/pages/about.astro
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { Image } from 'astro:assets';
import SiteBanner from '../assets/SiteBanner.png';

const SITE_TITLE = 'About - Football Techs';
const SITE_DESCRIPTION = 'Learn more about Football Techs – NFL and College Football news, analysis, and AI-powered betting insights from @FootballTechs';
---
<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<!-- Hero Banner with Nav Overlay -->
		<div class="hero-banner">
			<Image
				src={SiteBanner}
				alt="Football Techs - About Us"
				width={1920}
				height={600}
				format="webp"
				loading="eager"
			/>
			<div class="nav-overlay">
				<Header />
			</div>
		</div>

		<main class="about-content">
			<section class="about-section">
				<h1>About Football Techs</h1>
				
				<p class="intro">
					Welcome to <strong>Football Techs</strong> – your home for data-driven NFL and College Football coverage.
				</p>

				<p>
					We combine deep analytics, AI-powered modeling, and real-time insights to deliver sharp news, game previews, player prop analysis, and betting edges you won't find anywhere else.
				</p>

				<p>
					Founded and run by the team behind <a href="https://x.com/FootballTechs" target="_blank" rel="noopener">@FootballTechs</a> on X (2.4k+ followers and growing), this site is the official hub for all our picks, breakdowns, and exclusive content.
				</p>

				<h2>What We Cover</h2>
				<ul class="features">
					<li>AI-generated betting picks & player props</li>
					<li>In-depth game previews and statistical analysis</li>
					<li>Breaking NFL & College Football news with a tech/analytics spin</li>
					<li>Wild Card, Divisional, Conference Championship, and Super Bowl coverage</li>
					<li>Transparent tracking of pick performance and ROI</li>
				</ul>

				<h2>Our Mission</h2>
				<p>
					To give football fans and bettors the sharpest, most actionable insights available – turning data into an edge, one pick at a time.
				</p>

				<p class="closing">
					Thanks for visiting. Follow us on X for daily picks and join the conversation!<br />
					<a href="https://x.com/FootballTechs" target="_blank" rel="noopener" class="x-link">@FootballTechs</a>
				</p>
			</section>
		</main>

		<Footer />
	</body>
</html>

<style>
	.hero-banner {
		position: relative;
		width: 100%;
		overflow: hidden;
	}

	.hero-banner :global(img) {
		width: 100%;
		height: auto;
		display: block;
	}

	.nav-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		z-index: 10;
	}

	.about-content {
		max-width: 900px;
		margin: 0 auto;
		padding: 3rem 1.5rem;
	}

	.about-section {
		line-height: 1.7;
		color: var(--text-primary);
	}

	h1 {
		text-align: center;
		font-size: 2.5rem;
		margin-bottom: 2rem;
	}

	.intro {
		font-size: 1.3rem;
		text-align: center;
		margin-bottom: 2rem;
		font-weight: 500;
	}

	.features {
		font-size: 1.15rem;
		margin: 2rem 0;
		padding-left: 1.5rem;
	}

	.features li {
		margin-bottom: 0.75rem;
	}

	h2 {
		margin-top: 3rem;
		font-size: 1.8rem;
	}

	.closing {
		text-align: center;
		font-size: 1.15rem;
		margin-top: 3rem;
	}

	.x-link {
		font-weight: 600;
		color: var(--theme-accent, #00ff9d);
		text-decoration: none;
	}

	.x-link:hover {
		text-decoration: underline;
	}
</style>
